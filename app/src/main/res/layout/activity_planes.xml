<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/baca5c615b9e477626daf7f147cb10e9"
    tools:context=".Planes">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/BUT_R1"
                android:onClick="BUT_R1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="Rutina 1" />

            <Button
                android:id="@+id/BUT_R2"
                android:onClick="BUT_R2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="Rutina 2" />

            <Button
                android:id="@+id/BUT_R3"
                android:onClick="BUT_R3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="Rutina 3" />

            <Button
                android:id="@+id/BUT_R4"
                android:onClick="BUT_R4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="Rutina 4" />

            <Button
                android:id="@+id/BUT_R5"
                android:onClick="BUT_R5"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="Rutina 5" />

            <Button
                android:id="@+id/BUT_R6"
                android:onClick="BUT_R6"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="Rutina 6" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>